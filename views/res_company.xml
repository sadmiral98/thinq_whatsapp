<!-- Inherit Res Company Form -->
<odoo>
    <data>
        <record id="thinq_whatsapp_view_res_company_form" model="ir.ui.view">
            <field name="name">thinq.whatsapp.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Whatsapp Integration">
                        <button string="Clean Session" name="clean_session" type="object" class="oe_highlight"/>
                        <group>
                            <field name="whatsapp_user_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>